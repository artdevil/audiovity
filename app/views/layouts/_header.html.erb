            <ul class="nav">
                <li <%= "class='active'" if @title == 'Home' %> ><%= link_to "Home", root_path  %></li>
                <li <%= "class='active'" if @title == 'My Musics' || @title == 'Musics'  %>><%= link_to "Music", "#"  %></li>
                <li><%= link_to "About", "#"  %></li>
            </ul>
			<% if current_user.nil? %>
				<ul class="nav pull-right">
					<li><%= link_to 'Login', new_user_session_path  %></li>
					<li class='divider-vertical'></li>
					<li><button class='btn btn-primary'>Signup</button>
					</li>
				</ul>
			<% else %>
				<ul class="nav" style="width: 700px;">
					<div id="jp_container_N">
						<div class="jp-type-playlist">
							<div id="jquery_jplayer_N" class="jp-jplayer"></div>
							<div class="jp-gui">
								<div class="jp-interface">
									<div class="jp-controls-holder">
										<ul class="jp-controls">
											<li><a class="jp-previous" tabindex="1" href="javascript:;">previous</a></li>
											<li><a href="javascript:;" class="jp-play" tabindex="1">play</a></li>
											<li><a href="javascript:;" class="jp-pause" tabindex="1">pause</a></li>
											<li><a class="jp-next" tabindex="1" href="javascript:;">next</a></li>
										</ul>
										<div class="jp-progress">
											<div class="jp-seek-bar">
												<div class="jp-play-bar"><span></span></div>
											</div>
										</div>
										<ul class="timer">
											<li class="jp-current-time">00:00</li>
											<li>/</li>
											<li class="jp-duration">00:00</li>
										</ul>
