										<div class="jp-volume-bar">
											<div class="jp-volume-bar-value"><span class="handle"></span></div>
										</div>
										<ul class="jp-controls-playlist">
											<li class="jp-playing"><i id="show_playlist" class="icon-list-alt icon-white" ></i></li>
										</ul>
									</div>
								</div>
							</div>
							<div class="jp-playlist">
								<ul>
									<li></li>
								</ul>
							</div>
							<div class="jp-no-solution">
