							    	<li><%= link_to "setting profile", edit_user_registration_path %></li>
							    	<li class="divider"></li>
							    	<li><%= link_to 'Signout', destroy_user_session_path, :method => :delete %></li>
							    </ul>
					    	</li>
					    </ul>
	              	</li>
				<% end %>
            </ul>
          </div><!--/.nav-collapse -->
    	</div>
	</div>
